{
  "hosting": {
    "public": "public",
    "rewrites": [{
      "source":"/merchant-api",
      "function": "app"
    },
    {
      "source": "/debug",
      "function": "app"
    },
    {
      "source": "/success",
      "function": "app"
    },
    {
      "source": "/",
      "function": "app"
    }  
    ], 
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
